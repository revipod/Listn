<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_centerInParent="true"
        android:id="@+id/centerdot"
        android:layout_width="1dp"
        android:layout_height="1dp"/>

    <ImageView
        android:layout_centerHorizontal="true"
        android:src="@mipmap/camera"
        android:layout_above="@+id/addphotoTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cameraiconIV" />

    <TextView
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/centerdot"
        android:layout_margin="15dp"
        android:textSize="23sp"
        android:text="Profile Picture"
        android:id="@+id/addphotoTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <TextView
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/centerdot"
        android:text="This will allow your friends to recognize you"
        android:id="@+id/addphotosubtextTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_margin="20dp"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:text="Add a photo"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:id="@+id/addphotoBTN"
        android:background="@drawable/roundrectangle_firsttimemenu"
        android:layout_below="@+id/addphotosubtextTV"
        android:layout_centerHorizontal="true"
        />


    <TextView
        android:textColor="#551a8b"
        android:textSize="13sp"
        android:text="I'll do it later"
        android:id="@+id/skipPhotoTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp" />


</RelativeLayout>