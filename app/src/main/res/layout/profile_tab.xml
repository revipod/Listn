<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <FrameLayout
        android:id="@+id/profileFL"
        android:layout_width="match_parent"
        android:layout_height="400dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/playbtnRL"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:background="#ffb732"
                android:orientation="vertical" >


                <ImageView
                    android:src="@mipmap/profileplay"
                    android:id="@+id/playIV"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:visibility="invisible"
                    android:src="@mipmap/profilestop"
                    android:id="@+id/stopIV"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />




            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:orientation="vertical" >

                <TextView
                    android:layout_marginTop="50dp"
                    android:textColor="#000000"
                    android:id="@+id/usernameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="\@revipod"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:textColor="#000000"
                    android:id="@+id/fullnameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/usernameTV"
                    android:text="Mohsin Abbasi"
                    android:textSize="15sp"
                    />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:background="#000000"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp">

                <TextView
                    android:textColor="#000000"
                    android:gravity="center"
                    android:text="213 \n Listeners"
                    android:id="@+id/followersTV"
                    android:background="@drawable/flatrectangle_profiletab"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

                <TextView
                    android:textColor="#000000"
                    android:gravity="center"
                    android:text="15 \n Posts"
                    android:id="@+id/postsTV"
                    android:background="@drawable/flatrectangle_profiletab"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

                <TextView
                    android:textColor="#000000"
                    android:gravity="center"
                    android:text="54 \n Listening"
                    android:id="@+id/followingTV"
                    android:background="@drawable/flatrectangle_profiletab"
                    android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profileIV"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_centerHorizontal="true"
            android:background="?attr/selectableItemBackground"
            android:src="@mipmap/mohsin"
            app:civ_border_color="#ffffff"
            app:civ_border_width="2dp" />


    </FrameLayout>

        <ListView
            android:background="#d3d3d3"
            android:layout_below="@+id/profileFL"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


        </ListView>

</RelativeLayout>