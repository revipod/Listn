        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileIV"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_above="@+id/fullnameTV"
            android:layout_centerHorizontal="true"
            android:background="?attr/selectableItemBackground"
            android:src="@mipmap/starynight"
            app:civ_border_color="#b2b2ff"
            app:civ_border_width="2dp" />


        <ImageView
            android:id="@+id/stopIV"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/halfrectanglepressed"
            android:src="@mipmap/profilestop"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/playIV"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/halfrectanglebottom"
            android:src="@mipmap/profileplay" />

        <TextView
            android:id="@+id/bioTV"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listenersholderLL"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="38dp"
            android:gravity="center"
            android:text="I love gaming and working out. Add me on snapchat at ipodrev. Hit that Listn Button for more!"
            android:textSize="15sp" />

