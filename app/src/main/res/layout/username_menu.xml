<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainRL"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF">

        <TextView
            android:id="@+id/usernameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/usernamesubTV"
            android:layout_centerHorizontal="true"
            android:fontFamily="casual"
            android:text="Create a username"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/usernamesubTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/usernameET"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="33dp"
            android:text="This is how people will add you on Listn"
            android:textColor="#d3d3d3" />

        <EditText
            android:id="@+id/usernameET"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/roundrectangle_solid_gray"
            android:ems="10"
            android:padding="10dp" />


    <Button
        android:id="@+id/continueBTN"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/usernameET"
        android:layout_alignStart="@+id/usernameET"
        android:layout_below="@+id/usernameET"
        android:layout_marginTop="49dp"
        android:background="@drawable/roundrectangle_home"
        android:text="Contiue"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />


    </RelativeLayout>
